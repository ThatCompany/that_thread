<%= @message_url %>
<%= @message.author %>

<%= @message.content %>

<%= render_message_thread_quotes(@message, true) %>

<% if Redmine::VERSION::MAJOR > 4 || (Redmine::VERSION::MAJOR == 4 && Redmine::VERSION::MINOR > 1) -%>
<% if @message.attachments.any? -%>
---<%= l(:label_attachment_plural).ljust(37, '-') %>
<% @message.attachments.each do |attachment| -%>
<%= attachment.filename %> (<%= number_to_human_size(attachment.filesize) %>)
<% end -%>
<% end -%>
<% end -%>
