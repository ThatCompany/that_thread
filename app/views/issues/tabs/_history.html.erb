<% if Setting.plugin_that_thread['display'] == 'thread' && !User.current.wants_comments_in_reverse_order? %>
  <% tab[:locals][:journals] = Issue.reoder_journals_for_thread_view(tab[:locals][:journals]) %>
<% end %>

<%= render :file => File.join(Rails.root, 'app/views/issues/tabs/_history.html.erb'), :locals => { :tab => tab } %>

<% if Setting.plugin_that_thread['display'] == 'thread' && !User.current.wants_comments_in_reverse_order? %>
  <% content_for :header_tags do %>
    <%= javascript_include_tag('thread', :plugin => 'that_thread') %>
  <% end %>
<% end %>
